<WelcomeScreen>:
    name: "first"
    MDCard:
        size_hint:None, None
        size: 350, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation:10
        padding:15
        spacing:15
        orientation:'vertical'



        MDLabel:
            id: welcome_1
            text: "Welcome to CineStars"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding: 25

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = "second"
                root.manager.transition.direction = "up"

        MDRoundFlatButton:
            text: "CREATE AN ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = "third"
                root.manager.transition.direction = "up"

        Widget:
            size_hint_y: None
            height: 150



