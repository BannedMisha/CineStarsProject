<LogInScreen>:
    name: "second"

    aAcN: user
    aPas: password

    MDCard:
        size_hint:None, None
        size: 400, 600
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation:10
        padding:15
        spacing:25
        orientation:'vertical'



        MDLabel:
            id: welcome_login
            text: "Let's get started!"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding: 25

        MDTextField:
            mode: "round"
            id: user
            hint_text: "username"
            icon_right:"account"
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint:{"center_x": 0.5}

        MDTextField:
            mode: "round"
            id: password
            hint_text: "password"
            icon_right:"eye-off"
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint:{"center_x": 0.5}
            password: True

        MDFillRoundFlatButton:
            text: "SUBMIT"
            font_size:15
            pos_hint:{"center_x": 0.5}
            padding: 10
            size_hint: None, None  
            size: 200, 50 
            on_press:
                root.submit()
                #app.root.current = "fourth"
                root.manager.transition.direction = "up"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint: None, None
            size: self.minimum_size  # Größe auf die tatsächliche Größe des Inhalts setzen
            pos_hint: {"center_x": 0.5} 
            


            MDFillRoundFlatButton:
                text: "CLEAR"
                font_size: 15
                size_hint: None, None  
                size: 200, 50 
                on_press: root.clear()

            MDFillRoundFlatButton:
                text: "GO BACK"
                size_hint: None, None  
                size: 200, 50 
                font_size: 15
                on_press:
                    app.root.current = "first"
                    root.manager.transition.direction = "down"



        Image:
            size_hint: (0.3, 0.3) 
            pos_hint: { "center_x": 0.5 }
            source: "GUI Structure and resources/images/logo.png"
