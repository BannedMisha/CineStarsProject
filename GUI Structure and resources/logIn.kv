<LogInScreen>:
    name: "second"

    aAcN: user
    aPas: password

    MDCard:
        size_hint:None, None
        size: 350, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation:10
        padding:15
        spacing:25
        orientation:'vertical'

        MDLabel:
            id: welcome_login
            text: "Let's get started!"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding: 25

        MDTextField:
            mode: "round"
            id: user
            hint_text: "username"
            icon_right:"account"
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint:{"center_x": 0.5}

        MDTextField:
            mode: "round"
            id: password
            hint_text: "password"
            icon_right:"eye-off"
            size_hint_x: None
            width:200
            font_size: 18
            pos_hint:{"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "SUBMIT"
            font_size:12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.login_account()
                app.root.current = "fourth"
                root.manager.transition.direction = "up"

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.clear()

        MDRoundFlatButton:
            text: "GO BACK"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = "first"
                root.manager.transition.direction = "down"

        Image:
            source: 'C:/Users/Mara/Desktop/logo.png'
