<OrdersScreen>:
    name: "ninth "
    MDCard:
        size_hint:None, None
        size: 350, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation:10
        padding:25
        spacing:25
        orientation:'vertical'

        ScrollView:
            do_scroll_x:False
            do_scroll_y:True

            GridLayout:
                cols:1
                spacing: 10
                size_hint_y: None
                height:self.minimum_height
                anchor_x: 'center'


                MDLabel:
                    id: pers_info
                    text: "Order History"
                    font_size: 20
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: 25

